<section class="bg">
    <!-- BASE NAV BAR -->
<nav class="flex flex-row h-16 bg-green-1 align-text-bottom pl-64 pr-64 border-solid border-b-2 border-black">

    <!-- SPOT FOR LOGO -->
    <span class="flex flex-row h-16 bg-green-1 align-text-bottom border-solid border-b-2 border-black">
        <!-- ICON AND PRODUCT NAME -->
        <img class="object-center h-10 mt-3 mb-4" src="assets/img/robinshould-logo.png">
    </span>
</nav>

    <!-- CONTAINER FOR PROFILE BOX ALIGNS TO RIGHT SIDE -->
    <div class="flex justify-end pl-64 pr-24 pt-8 ">
        <!-- PROFILE CHOOSE BOX CONTAINER-->
        <div class="flex flex-col flex-none bg-green-1 landing-box bg-white">

            <!-- WELCOME MESSAGE IN PROFILE BOX -->
            <div class="pt-6 pr-8 pl-8 text1 align-text-bottom text-heebo">
                Welcome
            </div>
            <div class="pr-8 pl-8 text2 text-heebo">
                start planning today with ROBINshould
            </div>
            <!-- DIVIDE LINE IN PROFILE BOX -->
            <div class="pt-2 border-b-2 border-gray-300 border-solid ml-4 mr-4"></div>

            <!-- FORMS FOR NEW USERS IN PROFILE BOX -->
            <div class="text-heebo pl-8 pr-8 pt-2">
                <form class="pt-2">
                    Username: <input type="text" id="userName"></input>
                </form>

                <form class="pt-2 pb-5">
                    Monthly Income: <input type="text" id="monthlyIncome"></input>
                </form>

                <button id="createProfile" class="profileButton">Create My Profile</button>
            </div>

            <!-- DIVIDE LINE IN PROFILE BOX -->
            <div class="pt-6 border-b-2 border-gray-300 border-solid ml-4 mr-4"></div>

            <!-- BOTTOM HALF FOR EXISTING USERS -->
            <div class="text3 text-heebo pl-8 pr-8 pt-4">
                Choose an existing profile
            </div>

            <!-- CONTAINER FLEX BOX TO HOLD USERS -->
            <div id="existUser" class="text-heebo pl-8 pr-8 pt-4 container4">

                <!-- BUTTONS TO PROFILES REPLACE WITH HANDLEBARS LOOPING BASED ON DATABASE -->
                {{#each user}}
                <button id="profile" class="profBudget profButtons text-heebo text-heebo mt-2 mb-2">{{username}}</button>
                {{/each}}
                <!--make a div with user's information-->
            </div>
        </div>
    </div>
</section>