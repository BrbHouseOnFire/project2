  <section class="bg-two h-screen">
    <!------------------ START NAV BAR ------------------>
    {{> users/navbar-block}}

    <!------------------ END NAV BAR ------------------>

    <!------------------ START PROFILE PAGE CONTENT ------------------>

    <!----------------- BANNER FOR PAGE ----------------->
        <section class="banner1 flex flex-row justify-center bg-gray-200 h-32 items-center">
            <div class="h-24 w-40 text-center font-jockey text2 banner-font2">
                <img src="https://img.icons8.com/dusk/64/000000/search.png" class="center">Select Categories
            </div>
            <div class="h-24 w-40 text-center font-jockey text2 banner-font2">
                <img src="https://img.icons8.com/dusk/64/000000/calendar.png" class="center">Budget Amounts
            </div>
            <div class="h-24 w-40 text-center font-jockey text4">
                <img src="https://img.icons8.com/dusk/64/000000/checked.png" class="center">Save Expenses
            </div>
        </section>

    <!----------------- CONTAINER FOR EXPENSES ----------------->
    <section class="flex flex-col bg-white ml-64 mr-64 mt-3">
      <div class="text1 pt-4 pl-6 pr-6 pb-4">
        Expense for
        <select id="exCategory">
          <option value="">Category</option>

          <!----------------- PARTIAL HERE FOR LOOPING THROUGHT THE CATEGORIES ----------------->
          {{#each expense.categories}}
          {{> users/expenseCat-block}}
          {{/each}}
        </select>
        <form>
          <input id="expenseAmount" type="number"></input>
        </form>
      </div>
      <button id="saveExpense" class="border-black border-2 p-2 m-1">
        Save
      </button>
    </section>


    <!----------------- CONTAINER FOR LIST OF ALREADY EXISTING EXPENSES ----------------->
    <section class="flex bg-white flex-col ml-64 mr-64 mt-3 ml-6 mr-6">
      <div class="text1 bg-gray-1 pl-6 border-b-2 border-black">
        Total Expenses
      </div>
      <!----------------- PARTIAL HERE FOR LOOPING THROUGH THE EXPENSES ----------------->
      <div class="flex flex-col pt-2 pb-2 border-b-2 border-black">
        {{#each expense.expenses}}
        {{> users/totalExpense-block}}
        {{/each}}
      </div>
    </section>

  </section>
</body>

</html>